<h1>Listing Restaurants</h1>
<% if @restaurants.present? %>
	<table class="table">
  	<thead>
  		<tr>
  			<th></th>
  			<th>Name</th>	
  			<th>Link</th>
  		</tr>
  	</thead>
  	<tbody>
  		<% @restaurants.each do |res| %>
  			<tr>
          		<td><%= link_to (image_tag( res.photo_url, :size => "100x100", class: "img-thumbnail")), review_path(res) %></td>
  				<td><%= res.name %></td>
  				<td><%= link_to 'Show Reviews', review_path(res) %></td>
  			</tr>
  		<% end %>

  	</tbody>
  </table>
  <nav>
  <ul class="pagination">
  <%= paginate @restaurants %>
  </ul>
</nav>
  <% else %>
    <p>There are no restaurants with the search term(s) <%= params[:search] %>.</p>
<% end %>
